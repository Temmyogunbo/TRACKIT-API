{
  "name": "trackit-api",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "scripts": {
    "test": "cross-env NODE_ENV=test nyc mocha --timeout 10000 ./server/test/**/*.js",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "start": "cross-env NODE_ENV=production node server/dist/server.js",
    "build": "rm -rf server/dist && babel server/ --out-dir server/dist/ --copy-files",
    "build:dev": "cross-env NODE_ENV=development babel-node server/server.js",
    "heroku-postbuild": "npm run build"
  },
  "nyc": {
    "require": [
      "babel-register"
    ],
    "reporter": [
      "lcov",
      "text",
      "html"
    ],
    "sourceMap": false,
    "instrument": false,
    "exclude": [
      "server/test"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Temmyogunbo/TRACKIT-API.git"
  },
  "author": "Emmanuel Ogunbo",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Temmyogunbo/TRACKIT-API/issues"
  },
  "homepage": "https://github.com/Temmyogunbo/TRACKIT-API#readme",
  "dependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-preset-es2015": "^6.24.1",
    "body-parser": "^1.18.2",
    "cross-env": "^5.1.5",
    "dotenv": "^5.0.1",
    "express": "^4.16.3",
    "mongoose": "^5.0.17",
    "validator": "^10.1.0"
  },
  "devDependencies": {
    "babel-plugin-istanbul": "^4.1.6",
    "babel-register": "^6.26.0",
    "chai": "^4.1.2",
    "chai-http": "^4.0.0",
    "coveralls": "^3.0.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.11.0",
    "istanbul": "^0.4.5",
    "mocha": "^5.1.1",
    "nyc": "^11.7.3"
  }
}
